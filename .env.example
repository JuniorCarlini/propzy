# ==================================
# Configurações do Django
# ==================================
# DJANGO_SETTINGS_MODULE é definido automaticamente pelo manage.py como 'config.settings'
SECRET_KEY=change-me-to-a-random-secret-key-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ==================================
# Banco de Dados (PostgreSQL)
# ==================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=propzy
DB_USER=propzy
DB_PASSWORD=propzy123
# Para produção, aponte para o host/serviço existente do banco
DB_HOST=db
DB_PORT=5432

# Variáveis específicas do container PostgreSQL
POSTGRES_DB=propzy
POSTGRES_USER=propzy
POSTGRES_PASSWORD=propzy123

# ==================================
# Redis (Cache e Django-Q)
# ==================================
# Para produção, aponte para o host/serviço existente do Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ==================================
# Django-Q (Tarefas Assíncronas)
# ==================================
DJANGO_Q_WORKERS=4
DJANGO_Q_RETRY=3600
DJANGO_Q_TIMEOUT=300

# ==================================
# Superusuário (Criação Automática)
# ==================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@propzy.local
DJANGO_SUPERUSER_PASSWORD=admin123

# ==================================
# Gunicorn (Produção)
# ==================================
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info

# ==================================
# AWS S3 (Arquivos Estáticos/Mídia)
# ==================================
USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# ==================================
# E-mail (SMTP)
# ==================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@propzy.local

# ==================================
# Segurança (Produção)
# ==================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ==================================
# Logging
# ==================================
LOG_LEVEL=INFO

# ==================================
# Timezone e Idioma
# ==================================
TIME_ZONE=America/Sao_Paulo
LANGUAGE_CODE=pt-br
USE_I18N=True
USE_TZ=True
