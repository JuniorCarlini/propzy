# ========================================
# DATABASE
# ========================================
DB_NAME=propzy
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_HOST=db
DB_PORT=5432

# ========================================
# DJANGO
# ========================================
# GERAR COM: openssl rand -base64 50
SECRET_KEY=GENERATE_WITH_openssl_rand_base64_50
DEBUG=False
ALLOWED_HOSTS=propzy.com.br,app.propzy.com.br,*.propzy.com.br

# ========================================
# REDIS (OBRIGATÓRIO SENHA EM PRODUÇÃO)
# ========================================
REDIS_PASSWORD=CHANGE_ME_REDIS_STRONG_PASSWORD

# ========================================
# EMAIL (Configurar para produção)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-app-gmail
DEFAULT_FROM_EMAIL=noreply@propzy.com.br

# ========================================
# REDIS / CELERY (com senha)
# ========================================
CELERY_BROKER_URL=redis://:REDIS_PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:REDIS_PASSWORD@redis:6379/0
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379/1

# ========================================
# OPCIONAL
# ========================================
CREATE_SUPERUSER=false

# ========================================
# DOMÍNIOS DE CLIENTES
# ========================================
VPS_IP=SEU_IP_VPS_AQUI
PROXY_DOMAIN=proxy.propzy.com.br
CERTBOT_EMAIL=seu-email@exemplo.com
