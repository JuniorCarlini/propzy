# =============================================================================
# CONFIGURAÇÕES DE AMBIENTE
# =============================================================================
# Copie este arquivo para .env e ajuste os valores conforme necessário
# NÃO commite o arquivo .env (já está no .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# AMBIENTE
# -----------------------------------------------------------------------------
# Valores: local, production
DJANGO_SETTINGS_MODULE=config.settings.local

# -----------------------------------------------------------------------------
# DJANGO
# -----------------------------------------------------------------------------
# IMPORTANTE: Gere uma SECRET_KEY forte para produção
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=dev-secret-key-CHANGE-IN-PRODUCTION

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,*.propzy.com.br

# Debug (NUNCA use True em produção)
DEBUG=True

# -----------------------------------------------------------------------------
# BANCO DE DADOS (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=db
DB_NAME=propzy_dev
DB_USER=propzy_user
DB_PASSWORD=dev_password_change_in_prod
DB_PORT=5432

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme
REDIS_URL=redis://redis:6379/1

# -----------------------------------------------------------------------------
# CELERY
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# DOMÍNIOS E CERTIFICADOS SSL
# -----------------------------------------------------------------------------
# IP do seu VPS para verificação DNS
VPS_IP=127.0.0.1

# Domínio proxy para CNAME
PROXY_DOMAIN=proxy.propzy.com.br

# Email para Let's Encrypt
CERTBOT_EMAIL=admin@propzy.com.br

# -----------------------------------------------------------------------------
# EMAIL (SMTP)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@propzy.com.br

# -----------------------------------------------------------------------------
# DESENVOLVIMENTO
# -----------------------------------------------------------------------------
# Criar superusuário automaticamente no desenvolvimento
CREATE_SUPERUSER=false

# Credenciais do superusuário (se CREATE_SUPERUSER=true)
DJANGO_SUPERUSER_EMAIL=admin@propzy.com.br
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_USERNAME=admin























