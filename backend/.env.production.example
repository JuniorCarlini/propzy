# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================
# Arquivo específico para produção
# Configure estas variáveis no servidor
# =============================================================================

# -----------------------------------------------------------------------------
# AMBIENTE
# -----------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=config.settings.production

# -----------------------------------------------------------------------------
# DJANGO
# -----------------------------------------------------------------------------
# IMPORTANTE: NUNCA use a SECRET_KEY de desenvolvimento
# Gere uma nova: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=GERE-UMA-SECRET-KEY-FORTE-AQUI

# Hosts permitidos (domínios da aplicação)
ALLOWED_HOSTS=propzy.com.br,www.propzy.com.br,api.propzy.com.br

# Debug SEMPRE False em produção
DEBUG=False

# -----------------------------------------------------------------------------
# BANCO DE DADOS (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=db
DB_NAME=propzy_production
DB_USER=propzy_prod_user
DB_PASSWORD=SENHA-FORTE-DO-BANCO-AQUI
DB_PORT=5432

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=SENHA-FORTE-DO-REDIS-AQUI
REDIS_URL=redis://:SENHA-FORTE-DO-REDIS-AQUI@redis:6379/1

# -----------------------------------------------------------------------------
# CELERY
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://:SENHA-FORTE-DO-REDIS-AQUI@redis:6379/0
CELERY_RESULT_BACKEND=redis://:SENHA-FORTE-DO-REDIS-AQUI@redis:6379/0

# -----------------------------------------------------------------------------
# DOMÍNIOS E CERTIFICADOS SSL
# -----------------------------------------------------------------------------
# IP real do seu VPS
VPS_IP=SEU.IP.VPS.AQUI

# Domínio proxy para CNAME
PROXY_DOMAIN=proxy.propzy.com.br

# Email para Let's Encrypt
CERTBOT_EMAIL=admin@propzy.com.br

# -----------------------------------------------------------------------------
# EMAIL (SMTP) - PRODUÇÃO
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=producao@propzy.com.br
EMAIL_HOST_PASSWORD=SENHA-APP-GOOGLE-AQUI
DEFAULT_FROM_EMAIL=noreply@propzy.com.br

# -----------------------------------------------------------------------------
# SEGURANÇA ADICIONAL
# -----------------------------------------------------------------------------
# Configurações de segurança extras (opcional)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True























